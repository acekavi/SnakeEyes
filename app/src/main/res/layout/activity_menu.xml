<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@drawable/menu_background">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="156dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065"
        app:srcCompat="@drawable/logo"

        android:contentDescription="TODO" />


    <LinearLayout
        android:layout_width="359dp"
        android:layout_height="340dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.531">

        <Button
            android:id="@+id/commonSnakes"
            android:layout_width="359dp"
            android:layout_height="65dp"
            android:backgroundTint="#FF81a55f"
            android:drawableLeft="@drawable/iconsbook"
            android:drawableRight="@drawable/iconsright"
            android:fontFamily="@font/open_sans"
            android:text="COMMON SNAKES"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="12sp"
            tools:ignore="DuplicateClickableBoundsCheck" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp" />

        <Button
            android:id="@+id/capture"
            android:layout_width="359dp"
            android:layout_height="65dp"
            android:fontFamily="@font/open_sans"
            android:textSize="20sp"
            android:backgroundTint="#FF89ab6a"
            android:text="CAPTURE"
            android:drawableLeft="@drawable/iconscamera"
            android:textColor="@color/black"
            android:drawableRight="@drawable/iconsright"
            app:cornerRadius="12sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp" />

        <Button
            android:id="@+id/firstAid"
            android:layout_width="359dp"
            android:layout_height="66dp"
            android:backgroundTint="#FFa6bf8e"
            android:text="FIRST AID"
            android:fontFamily="@font/open_sans"
            android:drawableLeft="@drawable/iconsfirstaid"
            android:drawableRight="@drawable/iconsright"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:cornerRadius="12sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp" />

        <Button
            android:id="@+id/about"
            android:layout_width="359dp"
            android:layout_height="68dp"
            android:backgroundTint="#FFaec599"
            android:drawableRight="@drawable/iconsright"
            android:drawableLeft="@drawable/iconsabout"
            android:text="ABOUT"
            android:fontFamily="@font/open_sans"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:cornerRadius="12sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        >

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/dark_green"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:menu="@menu/bottom_navigation_menu"
            />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>