<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:layout_editor_absoluteX="1dp"
    android:fillViewport="true"
        tools:layout_editor_absoluteY="1dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/snakeImage"
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/gradient_1"
            app:srcCompat="@drawable/cobra" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:background="@color/white">


            <androidx.cardview.widget.CardView

                android:id="@+id/card_toxiclabel"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:foregroundGravity="center"
                app:cardBackgroundColor="@color/white"

                app:cardCornerRadius="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.245">

                <TextView
                    android:id="@+id/toxiclabel"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bebas_neue"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:hint="snake type"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/snakes_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:fontFamily="@font/carter_one"
                android:foregroundGravity="center"
                android:gravity="center"
                android:hint="Name Of Snake"
                android:textColor="@color/black"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/scie_label"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/monda_bold"
                    android:foregroundGravity="center"
                    android:gravity="center_vertical"
                    android:text=" Scientific Name : "
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/scie_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/charm_bold"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:hint=" scientific name "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Space
                    android:layout_width="match_parent"
                    android:minWidth="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/namelabel"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/monda_bold"
                    android:foregroundGravity="center"
                    android:gravity="center_vertical"
                    android:text="     |  Family : "
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/snakeFamilyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/charm_bold"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:hint=" snake family "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/snake_genus_labl"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/monda_bold"
                    android:foregroundGravity="center"
                    android:gravity="center_vertical"
                    android:text=" Genus :"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/snke_genus"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/charm_bold"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:hint="snake genus"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Space
                    android:layout_width="match_parent"
                    android:minWidth="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/snake_size_label"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:fontFamily="@font/monda_bold"
                android:foregroundGravity="center"
                android:gravity="center_vertical"
                android:text=" Average Size : "
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/snkeSize"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:fontFamily="@font/charm_bold"
                android:foregroundGravity="center"
                android:gravity="center"
                android:hint=" average size "
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Space
                android:layout_width="match_parent"
                android:minWidth="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/snake_weight_lbel"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/monda_bold"
                    android:foregroundGravity="center"
                    android:gravity="center_vertical"
                    android:text=" Average Weight : "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/snakWeight"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/charm_bold"
                    android:foregroundGravity="center"
                    android:gravity="left"
                    android:hint=" average weight "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Space
                    android:layout_width="match_parent"
                    android:minWidth="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/snake_color_labl"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/monda_bold"
                    android:foregroundGravity="left"
                    android:gravity="center_vertical"
                    android:text=" Color Of Snake : "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/snakeColr"
                    android:layout_width="278dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/charm_bold"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:hint=" color of snake "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Space
                    android:layout_width="match_parent"
                    android:minWidth="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/snake_venom_typ_labl"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/monda_bold"
                    android:foregroundGravity="center"
                    android:gravity="center_vertical"
                    android:text=" Venom Type : "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/snakeVenomTyp"
                    android:layout_width="292dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/charm_bold"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:hint=" snake venom type "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Space
                    android:layout_width="match_parent"
                    android:minWidth="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:fontFamily="@font/monda_bold"
            android:foregroundGravity="center"
            android:gravity="center_vertical"
            android:text="  Description "
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/desc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="                                                  snake description "
            android:textColor="@color/black" />


        </LinearLayout>
</ScrollView>
